{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2015",
        "lib": ["ES2016", "DOM", "DOM.Iterable"],
        "declaration": false,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node"
    },
    "ts-node": {
        "transpileOnly": true,
        "moduleTypes": {
            "**/*": "cjs"
        }
    }
}
